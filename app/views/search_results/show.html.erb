<div id='wrapper'>

  <div id='result'>
    <div>
      <%= image_tag(@member.photo_url) %>
      <span data-role="member-name"><%= @member.full_name %></span>
      <%= "(#{@member.party} - #{@member.state})" %>
      <p><%= @member.chamber %></p>
      <p>In office <%= time_ago_in_words(@member.start_date) %></p>
      <p>Current salary: <%= number_to_currency(@member.salary, precision: 0) %></p>
      <p>Cumulative salary: <%= number_to_currency(@member.cumulative_senator_salary, precision: 0) %>
    <p>Average amendments cosponsored should be displayed here: <%= @average_amendments_cosponsored %></p>
    </div>

    <div id="graphs">
      <ul>
        <li class="block" id="bills-sponsored-graph" data-bills-sponsored="<%= @member.bills_sponsored %>" data-average-bills-sponsored="<%= @average_bills_sponsored %>"></li>
        <li class="block" id="bills-cosponsored-graph" data-bills-cosponsored="<%= @member.bills_cosponsored %>" data-average-bills-cosponsored="<%= @average_bills_cosponsored %>"></li>
        <li class="block" id="amendments-sponsored-graph" data-amendments-sponsored="<%= @member.amendments_sponsored %>" data-average-amendments-sponsored="<%= @average_amendments_sponsored %>"></li>
        <li class="block" id="amendments-cosponsored-graph" data-amendments-cosponsored="<%= @member.amendments_cosponsored %>" data-average-amendments-cosponsored="<%= @average_amendments_cosponsored %>"></li>
      </ul>
    </div>
  </div>
</div>
